<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/movie_video_card_width"
    android:layout_height="@dimen/movie_video_card_height"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="@dimen/movie_video_card_corner_radius"
    app:cardElevation="@dimen/movie_video_card_elevation">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_movie_video_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/movie_video_card_description"
            android:scaleType="centerCrop" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@string/movie_video_card_description"
            app:srcCompat="@drawable/ic_play_youtube" />
    </FrameLayout>

</android.support.v7.widget.CardView>