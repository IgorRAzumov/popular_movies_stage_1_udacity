<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/movie_review_card_width"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/movie_review_card_margin"
    app:cardCornerRadius="@dimen/movie_review_card_corner_radius"
    app:cardElevation="@dimen/movie_review_card_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_large" />

        <TextView
            android:id="@+id/tv_movies_review_card_text_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="@integer/movie_review_card_cont_text_count_lines"
            android:minLines="@integer/movie_review_card_cont_text_count_lines"
            android:paddingEnd="@dimen/movie_review_card_cont_text_padding_end"
            android:paddingStart="@dimen/movie_review_card_cont_text_padding_start"
            android:scrollbars="vertical"
            android:text="\t"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@android:color/black" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_small" />

        <TextView
            android:id="@+id/tv_movie_review_card_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:paddingEnd="@dimen/movie_review_card_auth_text_padding_end"
            android:paddingStart="@dimen/movie_review_card_cont_text_padding_start"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@android:color/black" />
    </LinearLayout>
</android.support.v7.widget.CardView>
